<h1 class="m-1">Kahoot!</h1>

{{!-- Room ID --}}
<div>
  <p>Your Room ID is: {{ roomId }}</p>
</div>

{{!-- create questions & answers --}}
<div class="d-flex justify-content-center align-items-center">
  <form id="roomForm" class="w-50" action="/room/{{roomId}}/admin" method="post">
    <input id="roomId" type="hidden" name="roomId" value="{{roomId}}">

    <label class="form-label">What color is the sky?</label>
    <input class="form-control" type="text">

    <label class="form-label">How many sides does a rectangle have?</label>
    <input class="form-control" type="number">

    <button id="createRoomButton" type="submit" class="btn btn-primary my-3">Create Game</button>
  </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();
  var form = document.getElementById('roomForm');
  var roomId = document.getElementById('roomId');

  form.addEventListener('submit', function(e) {
    // e.preventDefault();

    socket.emit('create-room', roomId.value);
  });
</script>
